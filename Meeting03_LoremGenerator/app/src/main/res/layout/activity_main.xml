<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name='mydata'
            type="com.github.sandddrooo.MyData" />
        <variable
            name='loremIpsum'
            type="com.github.sandddrooo.MyData" />
        <variable
            name='cheeseIpsum'
            type="com.github.sandddrooo.MyData"/>
        <variable
            name='coffeeIpsum'
            type="com.github.sandddrooo.MyData"/>
        <variable
            name='pirateIpsum'
            type="com.github.sandddrooo.MyData"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_margin"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding"
        android:paddingEnd="@dimen/padding"
        android:background="#D6D6D6">

        <TextView
            android:id="@+id/title_text"
            style="@style/text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_text"
            android:textAlignment="center" />
        <Spinner
            android:id="@+id/lorem_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin" />

        <EditText
            android:id="@+id/creator_fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true" />

        <Button
            android:id="@+id/creator_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="@string/confirm_text"
            tools:text="@string/confirm_text" />

        <TextView
            android:id="@+id/creator_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:text=""
            android:textAlignment="center"
            android:textAppearance="@style/text_style"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/bintang_kuning"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_margin">

            <TextView
                android:id="@+id/lorem_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/lorem_text"
                android:textAlignment="center" />
        </ScrollView>
    </LinearLayout>
</layout>