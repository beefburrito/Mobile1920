<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/instruction_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/instruction_body"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_box1"
            style="@style/white_box"
            android:layout_width="72dp"
            android:layout_height="231dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E53935"
            app:layout_constraintBottom_toTopOf="@+id/text_box5"
            app:layout_constraintEnd_toStartOf="@+id/text_box2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instruction_body" />

        <TextView
            android:id="@+id/text_box2"
            style="@style/white_box"
            android:layout_width="67dp"
            android:layout_height="239dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:background="#D81B60"
            app:layout_constraintEnd_toStartOf="@+id/text_box3"
            app:layout_constraintStart_toEndOf="@+id/text_box1"
            app:layout_constraintTop_toBottomOf="@+id/instruction_body" />

        <TextView
            android:id="@+id/text_box3"
            style="@style/white_box"
            android:layout_width="100dp"
            android:layout_height="201dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#8E24AA"
            app:layout_constraintBottom_toTopOf="@+id/text_box7"
            app:layout_constraintEnd_toStartOf="@+id/text_box4"
            app:layout_constraintStart_toEndOf="@+id/text_box2"
            app:layout_constraintTop_toBottomOf="@+id/instruction_body" />

        <TextView
            android:id="@+id/text_box4"
            style="@style/white_box"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#5E35B1"
            app:layout_constraintBottom_toTopOf="@+id/text_box8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_box3"
            app:layout_constraintTop_toBottomOf="@+id/instruction_body" />

        <TextView
            android:id="@+id/text_box5"
            style="@style/white_box"
            android:layout_width="162dp"
            android:layout_height="132dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#3949AB"
            app:layout_constraintBottom_toTopOf="@+id/text_box9"
            app:layout_constraintEnd_toStartOf="@+id/text_box9"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_box1" />

        <TextView
            android:id="@+id/text_box6"
            style="@style/white_box"
            android:layout_width="118dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#00897B"
            app:layout_constraintEnd_toStartOf="@+id/text_box7"
            app:layout_constraintStart_toEndOf="@+id/text_box5"
            tools:layout_editor_absoluteY="597dp" />

        <TextView
            android:id="@+id/text_box7"
            style="@style/white_box"
            android:layout_width="123dp"
            android:layout_height="129dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="292dp"
            android:layout_marginEnd="10dp"
            android:background="#FB8C00"
            app:layout_constraintEnd_toStartOf="@+id/text_box8"
            app:layout_constraintStart_toEndOf="@+id/text_box6"
            app:layout_constraintTop_toBottomOf="@+id/text_box3" />

        <TextView
            android:id="@+id/text_box8"
            style="@style/white_box"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="60dp"
            android:background="#1E88E5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_box4" />

        <TextView
            android:id="@+id/text_box9"
            style="@style/white_box"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:background="#43A047"
            android:textColor="#43A047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_box5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>